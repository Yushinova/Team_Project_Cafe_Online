<UserControl x:Class="Admin.User_control.AddPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Admin.User_control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="150" Height="240" Background="White" >
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="Black"
            BorderThickness="0.5,0.5,0.5,0.5">
            <Button x:Name="DishImageButton" Content ="Загрузить"/>
        </Border>
        <TextBox x:Name="DishPrice" Grid.Row="1" HorizontalAlignment="Left" FontSize="18"
              Text="Название" FontFamily="a_FuturaRound Bold_0"/>
        <TextBox x:Name="DishName" Grid.Row="2" HorizontalAlignment="Left" FontSize="18"
               Text="Цена" FontFamily="a_FuturaRound Bold_0"/>
        <TextBox x:Name="DishDescription" Grid.Row="3" HorizontalAlignment="Left" FontSize="12"
               TextWrapping="Wrap"
       Text="Описание" FontFamily="a_FuturaRound"/>
       
    </Grid>
</UserControl>
